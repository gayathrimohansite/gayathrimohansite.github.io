---
interface Props {
  title?: string;
  description?: string;
}

const { title = "Gayathri Mohan", description = "Author, engineer, and speaker." } = Astro.props;
const pageTitle = `${title} | Gayathri Mohan`;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{pageTitle}</title>
    <meta name="description" content={description} />
    <link rel="stylesheet" href={Astro.resolve("/src/styles/global.css")} />
  </head>
  <body>
    <header class="site-header">
      <div class="container header-inner">
        <a class="logo" href={Astro.resolve("/")}>Gayathri Mohan</a>
        <nav class="site-nav" aria-label="Primary">
          <a href={Astro.resolve("/about")}>About</a>
          <a href={Astro.resolve("/book")}>Book</a>
          <a href={Astro.resolve("/speaking")}>Speaking</a>
          <a href={Astro.resolve("/writing")}>Writing</a>
          <a href={Astro.resolve("/press")}>Press</a>
          <a href={Astro.resolve("/contact")}>Contact</a>
        </nav>
      </div>
    </header>

    <main class="page-content">
      <slot />
    </main>

    <footer class="site-footer">
      <div class="container footer-inner">
        <p>© {new Date().getFullYear()} Gayathri Mohan. All rights reserved.</p>
        <div class="footer-links">
          <a href="mailto:placeholder@example.com">placeholder@example.com</a>
          <span aria-hidden="true">•</span>
          <a href="https://www.linkedin.com" rel="noreferrer">LinkedIn</a>
        </div>
      </div>
    </footer>
  </body>
</html>
