---
interface Props {
  title?: string;
  description?: string;
}

const { title = "Gayathri Mohan", description = "Author, engineer, and speaker." } = Astro.props;
const pageTitle = `${title} | Gayathri Mohan`;
import { withBase } from "../lib/base";
import "../styles/global.css";
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{pageTitle}</title>
    <meta name="description" content={description} />
  </head>
  <body>
    <header class="site-header">
      <div class="container header-inner">
        <a class="logo" href={withBase("/")}>Gayathri Mohan</a>
        <nav class="site-nav" aria-label="Primary">
          <a href={withBase("/about")}>About</a>
          <a href={withBase("/book")}>Book</a>
          <a href={withBase("/speaking")}>Speaking</a>
          <a href={withBase("/writing")}>Writing</a>
          <a href={withBase("/press")}>Press</a>
          <a href={withBase("/contact")}>Contact</a>
        </nav>
      </div>
    </header>

    <main class="page-content">
      <slot />
    </main>

    <footer class="site-footer">
      <div class="container footer-inner">
        <p>© {new Date().getFullYear()} Gayathri Mohan. All rights reserved.</p>
        <div class="footer-links">
          <a href="mailto:contact@gayathri-mohan.com">contact@gayathri-mohan.com</a>
          <span aria-hidden="true">•</span>
          <a href="https://x.com/gaya3manoj" rel="noreferrer">X (Twitter)</a>
        </div>
      </div>
    </footer>
  </body>
</html>
