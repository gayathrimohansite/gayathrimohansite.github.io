---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const press = await getCollection("press");
---

<BaseLayout title="Press" description="Press, media, and features for Gayathri Mohan.">
  <section class="container hero">
    <p class="eyebrow">Press</p>
    <h1>Media coverage and featured insights.</h1>
    <p>
      Highlights from book features, interviews, and industry coverage related to Gayathri's work
      in AI-driven quality engineering.
    </p>
  </section>

  <section class="section">
    <div class="container section-grid">
      {press.map((entry) => (
        <article class="card">
          <h3>{entry.data.title}</h3>
          <p class="muted">{entry.data.outlet}</p>
          <p>{entry.data.description}</p>
          {entry.data.link ? (
            <a class="button secondary" href={entry.data.link} rel="noreferrer">
              View coverage
            </a>
          ) : null}
        </article>
      ))}
    </div>
  </section>
</BaseLayout>
